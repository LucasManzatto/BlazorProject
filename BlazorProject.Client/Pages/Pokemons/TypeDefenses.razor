@using BlazorProject.Client.Shared.Utils
<h2 class="text-center">Type Defenses</h2>
<div class="row justify-content-center">
    <div class="col-9">
        <div class="row no-gutters">
            @foreach (string type in Colors.TypesList.Select(p => p.Key))
            {
                <div class="col">
                    <Type IsSmall=true Text=@type/>
                    <Efficacy Multiplier=@TypeEfficacies[type]/>
                </div>
            }
        </div>
    </div>
</div>

@code {
[Parameter]
public IDictionary<string,float> TypeEfficacies { get; set; }
}

